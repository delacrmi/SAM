<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_cutter_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#505680"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_cutter_details_delete"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/eliminar"
                android:layout_alignParentRight="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:layout_below="@+id/iv_cutter_details_delete">
                <TextView
                    android:id="@+id/tv_cutter_details_raise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/raise"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_Black_Dark"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/et_cutter_details_raise"
                    android:layout_width="85dp"
                    android:textColor="@color/color_accent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/tv_cutter_details_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_Black_Dark"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/et_cutter_details_weight"
                    android:layout_width="85dp"
                    android:textColor="@color/color_accent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>